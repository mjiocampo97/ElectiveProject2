<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OcampoElective2Project.Views.AddClothesPage">
    <ContentPage.Content>
        <AbsoluteLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" >
            <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
            <Grid>
            <StackLayout Padding="8,0">
           
              <Label Text="Description" FontSize="12" VerticalOptions="Center" ></Label>
              <Entry Text="{Binding Path=ClothesToAdd.Name}"  VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"  FontSize="18" x:Name="NameEntry"></Entry>
           
           
              <Label Text="Price" FontSize="12" VerticalOptions="Center" ></Label>
              <Entry Text="{Binding Path=ClothesToAdd.Price}" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" FontSize="18" x:Name="NamePrice" Keyboard="Numeric" ></Entry>
         
            </StackLayout>
             </Grid>

                <Button Text="Save" Command="{Binding SaveClothesCommand}" AbsoluteLayout.LayoutBounds=".5,1,1,.1" AbsoluteLayout.LayoutFlags="All"></Button>
            </StackLayout>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>