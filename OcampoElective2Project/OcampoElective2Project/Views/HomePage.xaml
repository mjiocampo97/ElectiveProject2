<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OcampoElective2Project.Views.HomePage">
    <ContentPage.Content>
        <AbsoluteLayout>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition AbsoluteLayout.LayoutBounds="1,1,1.35"/>
                <RowDefinition/>
             </Grid.RowDefinitions>
            <StackLayout Orientation="Horizontal" Grid.Row="1">
                <Label Text="Name: "></Label>
                <Label Text="{Binding UserAccount.FirstName}"></Label>
                <Label Text=", "></Label>
                <Label Text="{Binding UserAccount.LastName}"></Label>
            </StackLayout>
            </Grid>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>