<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OcampoElective2Project.Views.RegistrationPage">
    <ContentPage.Content>
        <StackLayout BackgroundColor="AliceBlue" HorizontalOptions="FillAndExpand">
            <StackLayout Orientation="Horizontal">
                <Label Text="First Name" Margin="2" FontSize= "18" HorizontalOptions="Center" VerticalOptions="Center"></Label>
                <Entry WidthRequest="150" FontSize="18" Margin="2" HorizontalOptions="CenterAndExpand" VerticalOptions="Center"></Entry>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Last Name" Margin="2,0" FontSize= "18" HorizontalOptions="Center" VerticalOptions="Center"></Label>
                <Entry WidthRequest="150" FontSize= "18" HorizontalOptions="CenterAndExpand" VerticalOptions="Center"></Entry>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Birthday" Margin="2,0" FontSize= "18" HorizontalOptions="Center" VerticalOptions="Center"> </Label>
                <DatePicker FontSize= "18" HorizontalOptions="CenterAndExpand" VerticalOptions="Center"></DatePicker>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Email Address" FontSize= "18" HorizontalOptions="Center" VerticalOptions="Center"></Label>
                <Entry WidthRequest="150" FontSize= "18" HorizontalOptions="CenterAndExpand" VerticalOptions="Center"></Entry>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Password" FontSize= "18" HorizontalOptions="Center" VerticalOptions="Center"></Label>
                <Entry WidthRequest="150" FontSize= "18" HorizontalOptions="CenterAndExpand" VerticalOptions="Center"></Entry>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Retype Password" FontSize= "18" HorizontalOptions="Center" VerticalOptions="Center"></Label>
                <Entry WidthRequest="150" FontSize= "18" HorizontalOptions="CenterAndExpand" VerticalOptions="Center"></Entry>
            </StackLayout>
            <Button Text="Register" FontSize="18"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>