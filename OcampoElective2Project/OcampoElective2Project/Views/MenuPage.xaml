<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OcampoElective2Project.Views.MenuPage">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#eff3f4">
            <Button Text="Home" 
                    Command="{Binding GoToHomePageCommand}" 
                    VerticalOptions="Center" 
                    HorizontalOptions="Center" WidthRequest="220" 
                    CornerRadius="25" 
                    Margin="0,10,0,0"
                    BackgroundColor="#08bce0"/>

            <Button Text="Expenses"  Command="{Binding GoToExpensePageCommand }" VerticalOptions="Center" HorizontalOptions="Center" WidthRequest="220" Margin="0,5,0,0" CornerRadius="25" BackgroundColor="#08bce0" ></Button>
            <Button Text="Income" Command="{Binding GoToIncomePageCommand}" VerticalOptions="Center" HorizontalOptions="Center" WidthRequest="220" Margin="0,5,0,0" CornerRadius="25" BackgroundColor="#08bce0"></Button>
            <Button Text="Log Out" Command="{Binding LogoutCommand }" VerticalOptions="Center" HorizontalOptions="Center" WidthRequest="220" Margin="0,5,0,0" CornerRadius="25" BackgroundColor="#08bce0"/>
          
        </StackLayout>
    </ContentPage.Content>
</ContentPage>